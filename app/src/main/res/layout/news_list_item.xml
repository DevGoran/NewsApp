<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_parent">

    <!-- Title TextView of the article displayed. -->
    <TextView
        android:id="@+id/title"
        style="@style/title_text_view"
        tools:text="The day of the dead" />

    <!-- Section TextView of the article displayed. -->
    <TextView
        android:id="@+id/section"
        style="@style/section_text_view"
        tools:text="San Francisco, CA" />

    <LinearLayout style="@style/parent_of_date_author">

        <!-- Author TextView of the article displayed. -->
        <TextView
            android:id="@+id/author"
            style="@style/author_text_view"
            tools:text="John Doe" />

        <!-- Date TextView of the article displayed. -->
        <TextView
            android:id="@+id/date"
            style="@style/date_text_view"
            tools:text="March 6, 2010" />
    </LinearLayout>
</LinearLayout>